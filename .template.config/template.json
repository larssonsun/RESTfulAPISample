{
  "author": "Larsson SUN",
  "classifications": [
    "Web/WebAPI"
  ],
  "name": "ASP.NET Core Web API for Larsson",
  "identity": "ASPNETCoreWebAPIforLarsson",
  "shortName": "webapil",
  "tags": {
    "language": "C#",
    "type": "project"
  },
  "sourceName": "RESTfulAPISample",
  "preferNameDirectory": true,
  "symbols": {
    "delete-sth-1": {
      "type": "parameter",
      "defaultValue": "",
      "replaces": "↓ -->"
    },
    "delete-sth-2": {
      "type": "parameter",
      "defaultValue": "",
      "replaces": "<!-- ↑"
    },
    "enable-swagger": {
      "type": "parameter",
      "dataType": "bool",
      "defaultValue": "false"
    },
    "enable-jwt-authentication": {
      "type": "parameter",
      "dataType": "bool",
      "defaultValue": "false"
    },
    "enable-response-cache": {
      "type": "parameter",
      "dataType": "bool",
      "defaultValue": "false"
    },
    "cache-type": {
      "type": "parameter",
      "dataType": "choice",
      "choices": [
        {
          "choice": "LocalMemoryCache",
          "description": "In-local-memory cache"
        },
        {
          "choice": "DistributedCache",
          "description": "Distributed caching (default in memory)"
        }
      ],
      "description": "The cache type to use"
    },
    "db-type": {
      "type": "parameter",
      "datatype": "choice",
      "choices": [
        {
          "choice": "DbInMemory",
          "description": "Database in local memory"
        },
        {
          "choice": "MsSQL",
          "description": "Database in Microsoft SQL Server"
        }
      ],
      "defaultValue": "DbInMemory",
      "description": "The database type to use"
    },
    "ENABLESWAGGER": {
      "type":"computed",
      "value":"(enable-swagger == \"true\")"
    },
    "ENABLEJWTAUTHENTICATION": {
      "type": "computed",
      "value": "(enable-jwt-authentication == \"true\")"
    },
    "ENABLERESPONSECACHE": {
      "type": "computed",
      "value": "(enable-response-cache == \"true\")"
    },
    "LOCALMEMORYCACHE": {
      "type": "computed",
      "value": "(cache-type == \"LocalMemoryCache\")"
    },
    "DISTRIBUTEDCACHE": {
      "type": "computed",
      "value": "(cache-type == \"DistributedCache\")"
    },
    "DBINMEMORY": {
      "type": "computed",
      "value": "(db-type == \"DbInMemory\")"
    },
    "MSSQL": {
      "type": "computed",
      "value": "(db-type == \"MsSQL\")"
    }
  },
  "sources": [
    {
      "rename": {
        "appsettings_": "appsettings.json",
        "appsettings.Development_": "appsettings.Development.json"
      },
      "modifiers": [
        {
          "exclude": [
            "testRec.cs",
            "README.md",
            "LICENSE",
            ".gitignore",
            "RESTfulAPISample.code-workspace",
            "**/.[Gg]it/**",
            "**/.[Vv]scode/**",
            "**/[Bb]in/**",
            "**/*[pP]roperties**/*",
            "**/*[aA]ppsettings**/*.json"
          ]
        },
        {
          "exclude": [
            "**/[Ee]ntityConfigurations/**",
            "**/[Mm]igrations/**"
          ],
          "condition": "(db-type == \"DbInMemory\")"
        },
        {
          "exclude": [
            "**/Repositories/UserRepository.cs",
            "**/Interfaces/IAuthenticateService.cs",
            "**/Interfaces/IUserRepository.cs",
            "**/DomainModels/LoginRequest.cs",
            "**/DomainModels/TokenManagement.cs",
            "**/Services/TokenAuthenticationService.cs",
            "**/Controllers/AuthenticationController.cs"
          ],
          "condition": "(enable-jwt-authentication != \"true\")"
        }
      ]
    }
  ]
}